<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="#ED7C8C"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Üst Satır: Product Name ve Edit Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/productCatalogName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Product Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buyButton"
            android:layout_width="76dp"
            android:layout_height="35dp"
            android:backgroundTint="#E41B38"
            android:text="Buy"
            android:textSize="14sp"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <!-- Category -->
    <TextView
        android:id="@+id/productCatalogCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:text="Category"
        android:textStyle="italic" />

    <!-- Satır: Price ve Stock -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/productCatalogPrice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Price" />


    </LinearLayout>

    <!-- Satır: Cost ve Discount -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    </LinearLayout>

    <!-- Profit -->


</LinearLayout>
