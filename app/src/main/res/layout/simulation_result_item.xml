<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_margin="4dp"
    android:padding="12dp"
    android:elevation="1dp">

    <!-- Product Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/resultProductName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Product Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2E7D32" />

        <TextView
            android:id="@+id/profitIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“Š OK"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="#F0F0F0"
            android:padding="4dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/resultCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CATEGORY"
        android:textSize="12sp"
        android:textColor="#666666"
        android:textStyle="italic"
        android:layout_marginBottom="12dp" />

    <!-- Sales Data Grid -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <!-- Left Column -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SOLD"
                android:textSize="10sp"
                android:textColor="#888888"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/resultQuantitySold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UNIT PRICE"
                android:textSize="10sp"
                android:textColor="#888888"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/resultUnitPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$0.00"
                android:textSize="14sp"
                android:textColor="#4CAF50" />

        </LinearLayout>

        <!-- Middle Column -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REVENUE"
                android:textSize="10sp"
                android:textColor="#888888"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/resultTotalRevenue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$0.00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FF5722"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DEMAND"
                android:textSize="10sp"
                android:textColor="#888888"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/resultDemandRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textSize="14sp"
                android:textColor="#9C27B0" />

        </LinearLayout>

        <!-- Right Column -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="STOCK LEFT"
                android:textSize="10sp"
                android:textColor="#888888"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/resultRemainingStock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#795548" />

        </LinearLayout>

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginTop="8dp" />

</LinearLayout>